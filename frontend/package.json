{
  "name": "st-krakos-frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run lint && npm run validate-sw && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .js --fix",
    "lint:check": "eslint . --ext .js",
    "validate-sw": "node scripts/validate-sw.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:sw": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/service-worker.test.js",
    "precommit": "npm run lint:check && npm run validate-sw && npm run test:sw"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  }
}

